[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[apply]
  whitespace = warn
[core]
  excludesfile = ~/.gitignore
  editor = nvim
	pager = delta --line-numbers --dark
[push]
  default = simple
[merge]
  tool = opendiff
[mergetool]
  keepBackup = false
[user]
	name = Stephen Lumenta
	email = stephen.lumenta@gmail.com
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[pull]
	rebase = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[delta]
	side-by-side = true
